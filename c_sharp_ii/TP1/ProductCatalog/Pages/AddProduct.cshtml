@page
@model AddProductModel
@{
    ViewData["Title"] = "Adicionar Produto";
}

<div class="container">
    <h1>Adicionar Produto</h1>
    
    @if (!string.IsNullOrEmpty(Model.SubmittedName))
    {
        <div class="alert alert-success">
            <h4>Produto adicionado com sucesso!</h4>
            <p><strong>Nome:</strong> @Model.SubmittedName</p>
            <p><strong>Preço:</strong> @Model.SubmittedPrice.ToString("C")</p>
        </div>
    }
    
    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label">Nome do Produto</label>
                    <input asp-for="ProductName" class="form-control" type="text" required />
                </div>
                
                <div class="mb-3">
                    <label asp-for="ProductPrice" class="form-label">Preço</label>
                    <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" min="0" required />
                </div>
                
                <button type="submit" class="btn btn-primary">Adicionar Produto</button>
                <a asp-page="/Index" class="btn btn-secondary">Voltar ao Catálogo</a>
            </div>
        </div>
    </form>
</div>