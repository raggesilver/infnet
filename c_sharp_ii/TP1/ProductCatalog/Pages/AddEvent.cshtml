@page
@model AddEventModel
@{
    ViewData["Title"] = "Cadastrar Evento";
}

<div class="container">
    <h1>Cadastrar Evento</h1>
    
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            @Model.SuccessMessage
        </div>
    }
    
    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="EventTitle" class="form-label">Título do Evento</label>
                    <input asp-for="EventTitle" class="form-control" type="text" required />
                </div>
                
                <div class="mb-3">
                    <label asp-for="EventDate" class="form-label">Data do Evento</label>
                    <input asp-for="EventDate" class="form-control" type="datetime-local" required />
                </div>
                
                <div class="mb-3">
                    <label asp-for="EventLocation" class="form-label">Local do Evento</label>
                    <input asp-for="EventLocation" class="form-control" type="text" required />
                </div>
                
                <button type="submit" class="btn btn-primary">Cadastrar Evento</button>
                <a asp-page="/Index" class="btn btn-secondary">Voltar ao Catálogo</a>
            </div>
        </div>
    </form>
    
    @if (Model.RegisteredEvents.Any())
    {
        <hr />
        <h3>Eventos Cadastrados</h3>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Data</th>
                        <th>Local</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evt in Model.RegisteredEvents)
                    {
                        <tr>
                            <td>@evt.Title</td>
                            <td>@evt.Date.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@evt.Location</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>