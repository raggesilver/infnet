@page
@model IndexModel
@{
    ViewData["Title"] = "Catálogo de Produtos";
}

<div class="container">
    <h1>Catálogo de Produtos</h1>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nome do Produto</th>
                        <th>Preço</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
