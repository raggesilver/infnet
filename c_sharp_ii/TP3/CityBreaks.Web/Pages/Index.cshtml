@page
@model IndexModel
@{
    ViewData["Title"] = "Cities and Properties";
}

<div class="container">
    <h1 class="display-4 mb-4">Cities and Properties</h1>

    @if (Model.Cities.Any())
    {
        <div class="row">
            @foreach (var city in Model.Cities)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">@city.Name</h5>
                            <small>@city.Country?.CountryName</small>
                        </div>
                        <div class="card-body">
                            @if (city.Properties?.Any() == true)
                            {
                                <h6 class="card-subtitle mb-2 text-muted">Properties (@city.Properties.Count)</h6>
                                <div class="list-group list-group-flush">
                                    @foreach (var property in city.Properties)
                                    {
                                        <div class="list-group-item px-0 py-2">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="fw-bold">@property.Name</span>
                                                <span class="badge bg-success">@property.PricePerNight.ToString("C")/night</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No properties available</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No Cities Found</h4>
            <p>There are currently no cities in the database.</p>
        </div>
    }
</div>
