@page
@model Index
@{
  ViewData["Title"] = "Cadastrar Cidade Turística";
}

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Cadastrar Cidade Turística</h3>
        </div>
        <div class="card-body">
          @if (!string.IsNullOrEmpty(Model.SubmittedCityName))
          {
            <div class="alert alert-success" role="alert">
              <h4 class="alert-heading">Sucesso!</h4>
              <p class="mb-0">Cidade "<strong>@Model.SubmittedCityName</strong>"
                foi cadastrada com sucesso!</p>
            </div>
          }

          <form method="post">
            <div class="form-group mb-3">
              <label for="cityName" class="form-label">Nome da Cidade:</label>
              <input name="cityName" id="cityName" type="text"
                     class="form-control"
                     placeholder="Digite o nome da cidade turística" required/>
              @if (ViewData.ModelState["cityName"]?.Errors.Count > 0)
              {
                <span
                  class="text-danger">@ViewData.ModelState["cityName"]?.Errors.First().ErrorMessage</span>
              }
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Cadastrar Cidade
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial"/>
}
