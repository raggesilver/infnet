@page
@model Index

@{
  ViewData["Title"] = "Cadastrar País";
}


<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Cadastrar País</h3>
        </div>
        <div class="card-body">
          @if (!string.IsNullOrEmpty(Model.SuccessMessage))
          {
            <div class="alert alert-success" role="alert">
              <h4 class="alert-heading">Sucesso!</h4>
              <p class="mb-0">@Model.SuccessMessage</p>
            </div>
          }

          <form method="post">
            <div class="form-group mb-3">
              <label asp-for="Input.CountryName" class="form-label">Nome do
                País:</label>
              <input asp-for="Input.CountryName" class="form-control"
                     placeholder="ex.: Brasil"/>
              <span asp-validation-for="Input.CountryName"
                    class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
              <label asp-for="Input.CountryCode" class="form-label">Código do
                país:</label>
              <input asp-for="Input.CountryCode" class="form-control"
                     placeholder="ex.: BR"/>
              <span asp-validation-for="Input.CountryCode"
                    class="text-danger"></span>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Cadastrar País
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial"/>
}
